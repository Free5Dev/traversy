{% extends 'base.html.twig' %}

{% block title %} Symphart Articles {% endblock %}
{% block body %}
    <h1>Hello my name is {{ name }}</h1>
    {% if articles %}
        <table id="articles" class="table table-stripped">
            <thead>
                <tr>
                    <th>Article Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.title }}</td>
                        <td> 
                            <a href="/article/{{ article.id }}" class="btn btn-primary">Show</a> 
                            <a href="/article/edit/{{ article.id }}" class="btn btn-warning">Edit</a> 
                            <a href="" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Not Article</p>
    {% endif %}
    
{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}