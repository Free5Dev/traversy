{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
                <tr>
                    <th>Article Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.title }}</td>
                        <td><a href="/article/{{article.id}}" class="btn btn-dark">Show</a></td>
                        <td><a href="/article/edit/{{article.id}}" class="btn btn-light">Edit</a></td>
                        <td><a href="" data-id="{{article.id}}" class="btn btn-danger delete-article">Delete</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No Article </p>
    {% endif %}    
{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}